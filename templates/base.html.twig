<!doctype html>
<html lang="fr">
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<title>
			{% block title %}LamaZoo -
			{% endblock %}
		</title>
		{% block stylesheets %}
			<link href="https://bootswatch.com/5/minty/bootstrap.min.css" rel="stylesheet" integrity="sha384T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
		{% endblock %}
	</head>
	<body>
		<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
			<div class="container">
						<a href="{{ path('app_accueil') }}">
    						<img src="images/LamaZooLogo.png" alt="Logo LamaZoo" width="50">
						</a>
	
				<div class="collapse navbar-collapse" id="navbarSupportedContent">
					<ul class="navbar-nav ms-auto mb-2 mb-lg-0">
						<li class="nav-item">
							<a class="nav-link active" aria-current="page" href="{{ path('app_accueil') }}">Accueil</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="{{ path('app_activites') }}">Activités</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="{{ path('app_boutique') }}">Boutique</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="{{ path('app_panier') }}">Panier</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="{{ path('app_contact') }}">Contact</a>
						</li>
					</ul>
				</div>
			</div>
		</nav>


		{% block body %}LamaZoo
		{% endblock %}

		{% block footer %}
			<footer class="bg-dark text-white py-4">
				<div class="container">
					<div class="row">
						<div class="col-md-6">
							<p>&copy;
								{{ "now"|date("Y") }}
								LamaZoo. Tous droits réservés.</p>
						</div>
						<div class="col-md-6 text-md-end">
							<ul class="list-inline">
								<li class="list-inline-item">
									<a href="{{ path('app_contact') }}" class="text-white">Nous contacter</a>
								</li>
							</ul>
						</div>
					</div>
				</div>
			</footer>
		{% endblock %}

		{% block javascripts %}
			<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
		{% endblock %}
	</body>
</html>
